<div class="container">
    <h2>Реєстрація</h2>
    <form asp-action="OnRegister" asp-controller="Home">
        <div class="form-group">
            <label for="name">Ім'я</label>
            <input name="name" type="text" class="form-control" id="name" required>
        </div>
        <div class="form-group">
            <label for="email">Електронна пошта</label>
            <input name="email" type="email" class="form-control" id="email" required>
        </div>
        <div class="form-group">
            <label for="birthdate">Дата народження</label>
            <input name="birthday" type="date" class="form-control" id="birthdate" required>
        </div>
        <div class="form-group">
            <label for="gender">Стать</label>
            <select name="gender" class="form-control" id="gender" required>
                <option>Чоловік</option>
                <option>Жінка</option>
                <option>Інше</option>
            </select>
        </div>
        <div class="form-group">
            <label for="password">Пароль</label>
            <input name="password" type="password" class="form-control" id="password" required>
        </div>
        <button type="submit" class="btn btn-primary btn-block">Зареєструватися</button>
    </form>
    <a style="color: white;" asp-action="Login" asp-controller="Home">Авторизуватись</a>
</div>